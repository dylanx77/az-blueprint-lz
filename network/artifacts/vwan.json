{
    "kind": "template",
    "name": "network-landing-zone-vwan",
    "type": "Microsoft.Blueprint/blueprints/artifacts",
    "properties": {
        "template": {
            "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
            "contentVersion": "1.0.0.0",
            "parameters": {
                "vwanName": {
                    "type": "string",
                    "metadata": {
                        "description": "Virtual Wan Name"
                    }
                },
                "vwanSku": {
                    "type": "string",
                    "metadata": {
                        "description": "Virtual Wan SKU - Basic or Standard"
                    }
                },
                "hubName": {
                    "type": "string",
                    "metadata": {
                        "description": "Virtual Hub name"
                    }
                },
                "hubAddressPrefix": {
                    "type": "string",
                    "metadata": {
                        "description": "Virtual Hub Cidr Range"
                    }
                },
                "azFirewallName": {
                    "type": "string",
                    "metadata": {
                        "description": "Name of the Azure Firewall"
                    }
                },
                "azFirewallPolicyName": {
                    "type": "string",
                    "metadata": {
                        "description": "Name of the Azure Firewall policy"
                    }
                },
                "routeTableName": {
                    "type": "string",
                    "metadata": {
                        "description": "Name of the Virtual Hub route table"
                    }
                },
                "location": {
                    "type": "string",
                    "metadata": {
                        "description": "Location for all resources."
                    }
                }
            },
            "variables": {},
            "resources": [
                {
                    "type": "Microsoft.Network/virtualWans",
                    "name": "[parameters('vwanName')]",
                    "apiVersion": "2020-05-01",
                    "location": "[parameters('location')]",
                    "properties": {
                        "type": "[parameters('vwanSku')]",
                        "disableVpnEncryption": false,
                        "allowBranchToBranchTraffic": true,
                        "office365LocalBreakoutCategory": "None"
                    }
                },
                {
                    "type": "Microsoft.Network/virtualHubs",
                    "name": "[parameters('hubName')]",
                    "apiVersion": "2020-05-01",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Network/virtualWans', parameters('vwanName'))]"
                    ],
                    "properties": {
                        "addressPrefix": "[parameters('hubAddressPrefix')]",
                        "virtualWan": {
                            "id": "[resourceId('Microsoft.Network/virtualWans', parameters('vwanName'))]"
                        }
                    }
                },
                {
                    "type": "Microsoft.Network/firewallPolicies",
                    "apiVersion": "2020-06-01",
                    "name": "[parameters('azFirewallPolicyName')]",
                    "location": "[parameters('location')]",
                    "properties": {
                        "threatIntelMode": "Alert"
                    }
                },
                {
                    "type": "Microsoft.Network/firewallPolicies/ruleCollectionGroups",
                    "apiVersion": "2020-06-01",
                    "name": "[concat(parameters('azFirewallPolicyName'), '/DefaultRuleCollectionGroup')]",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Network/firewallPolicies', parameters('azFirewallPolicyName'))]"
                    ],
                    "properties": {
                        "priority": 300,
                        "ruleCollections": [
                            {
                                "ruleCollectionType": "FirewallPolicyFilterRuleCollection",
                                "name": "RC-01",
                                "priority": 100,
                                "action": {
                                    "type": "Allow"
                                },
                                "rules": [
                                    {
                                    "ruleType": "ApplicationRule",
                                    "name": "Allow-msft",
                                    "sourceAddresses": [
                                        "*"
                                    ],                
                                    "protocols": [
                                        {
                                        "port": "80",
                                        "protocolType": "http"
                                        },
                                        {
                                        "port": "443",
                                        "protocolType": "https"
                                        }
                                    ],
                                    "targetFqdns": [
                                        "*.microsoft.com"
                                    ]
                                    }
                                ]
                            }
                        ]
                    }
                },
                {
                    "type": "Microsoft.Network/azureFirewalls",
                    "apiVersion": "2020-06-01",
                    "name": "[parameters('azFirewallName')]",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Network/virtualHubs', parameters('vhubName'))]",
                        "[resourceId('Microsoft.Network/firewallPolicies', parameters('azFirewallPolicyName'))]"
                    ],
                    "properties": {
                        "sku": {
                            "name": "AZFW_Hub",
                            "tier": "Standard"
                        },
                        "hubIPAddresses": {
                            "publicIPs": {
                            "count": 1
                            }
                        },
                        "virtualHub": {
                            "id": "[resourceId('Microsoft.Network/virtualHubs/', parameters('vhubName'))]"
                        },
                        "firewallPolicy": {
                            "id": "[resourceId('Microsoft.Network/firewallPolicies/', parameters('azFirewallPolicyName'))]"
                        }
                    }
                },
                {
                    "type": "Microsoft.Network/routeTables",
                    "apiVersion": "2020-06-01",
                    "name": "[parameters('routeTableName')]",
                    "location": "[parameters('location')]",
                    "properties": {
                        "disableBgpRoutePropagation": false,
                        "routes": [
                            {
                                "name": "jump-to-inet",
                                "properties": {
                                    "addressPrefix": "0.0.0.0/0",
                                    "nextHopType": "Internet"
                                }
                            }
                        ]
                    }
                },
                {
                    "type": "Microsoft.Network/virtualHubs/hubRouteTables",
                    "apiVersion": "2020-06-01",
                    "name": "[concat(parameters('hubName'), '/route_table_vnet')]",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Network/azureFirewalls', parameters('azFirewallName'))]"
                    ],
                    "properties": {
                        "routes": [
                            {
                                "name": "Workload-SNToFirewall",
                                "destinationType": "CIDR",
                                "destinations": [
                                    "10.10.0.0/27"
                                ],
                                "nextHopType": "ResourceId",
                                "nextHop": "[resourceId('Microsoft.Network/azureFirewalls', parameters('azFirewallName'))]"
                            },
                            {
                                "name": "InternetToFirewall",
                                "destinationType": "CIDR",
                                "destinations": [
                                    "0.0.0.0/0"
                                ],
                                "nextHopType": "ResourceId",
                                "nextHop": "[resourceId('Microsoft.Network/azureFirewalls', parameters('azFirewallName'))]"
                            }
                        ],
                        "labels": [
                            "VNet"
                        ]
                    }
                },
                {
                    "type": "Microsoft.Network/virtualHubs/hubVirtualNetworkConnections",
                    "apiVersion": "2020-06-01",
                    "name": "[concat(parameters('hubName'), '/conn_to_test_vnet')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Network/azureFirewalls', parameters('azFirewallName'))]",
                        "[resourceId('Microsoft.Network/virtualHubs', parameters('hubName'))]",
                        "[resourceId('Microsoft.Network/virtualHubs/hubRouteTables', parameters('hubName'), 'route_table_vnet')]"
                    ],
                    "properties": {
                        "remoteVirtualNetwork": {
                            "id": "[reference(resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('vnetName')), '2020-11-01')]"
                        },
                        "allowHubToRemoteVnetTransit": true,
                        "allowRemoteVnetToUseHubVnetGateways": false,
                        "enableInternetSecurity": true,
                        "routingConfiguration": {
                            "associatedRouteTable": {
                                "id": "[resourceId('Microsoft.Network/virtualHubs/hubRouteTables', parameters('hubName'), 'route_table_vnet')]"
                            },
                            "propagatedRouteTables": {
                                "labels": [
                                    "VNet"
                                ],
                                "ids": [
                                    {
                                        "id": "[resourceId('Microsoft.Network/virtualHubs/hubRouteTables', parameters('hubName'), 'route_table_vnet')]"
                                    }
                                ]
                            }
                        }
                    }
                }
            ],
            "outputs": {
                "vwanResourceId": {
                    "type": "string",
                    "value": "resourceId('Microsoft.Network/virtualNetwork', parameters('vwanName'))"
                }
            }
        },
        "resourceGroup": "vwanRg",
        "displayName": "ARM template for the Network landing zone Network Watcher resources across relevant regions",
        "parameters": {
            "location": {
                "value": "[parameters('location')]"
            },
            "vwanName": {
                "value": "[parameters('vwanName')]"
            },
            "vwanSku": {
                "value": "[parameters('vwanSku')]"
            },
            "hubName": {
                "value": "[parameters('hubName')]"
            },
            "hubAddressPrefix": {
                "value": "[parameters('hubAddressPrefix')]"
            }
        }
    }
}